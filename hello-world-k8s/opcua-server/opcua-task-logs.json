{
  "family": "opcua-demo-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::770404292192:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "opcua-demo",
      "image": "770404292192.dkr.ecr.us-east-1.amazonaws.com/opcua-demo:v3",
      "essential": true,
      "portMappings": [{ "containerPort": 4840, "protocol": "tcp" }],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/opcua-demo",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
